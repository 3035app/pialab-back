{% extends "pia/Layout/base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/semantic-librinfo.min.css') }}"/>
    <link rel="stylesheet" href="{{ asset('assets/css/styles-public.css') }}"/>
{% endblock %}

{% block body_attributes %}style="margin-top: 1em;"{% endblock body_attributes %}

{% block body %}

    <div class="ui middle aligned center aligned grid" style="height:100%;">
        <div class="column" style="max-width:400px;">
            <h2 class="ui image">
                <img src="{{ asset('assets/img/pia-lab.png') }}" class="image">
            </h2>

            <div class="ui segments">
                <div class="ui segment">
                    <span class="ui teal header">Mot de passe oubli√©</span>
                </div>
                <div class="ui teal segment">
                    <form class="ui large form" action="{{ path('fos_user_resetting_send_email') }}" method="POST">
                        <div class="field">
                            <label for="username" class="ui teal header">{{ 'resetting.request.username'|trans }}</label>
                            <input type="text" id="username" name="username" required="required"/>
                        </div>

                        <div>
                            <div class="ui fluid buttons">
                                <button class="ui positive button" type="submit">{{ 'resetting.request.submit'|trans }}</button>
                                <div class="or" data-text="ou"></div>
                                <a class="ui teal button" onclick="javascript:window.history.go(-1);">{{ 'resetting.request.cancel'|trans }}</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}