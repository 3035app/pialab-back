{% trans_default_domain 'Pia' %}

{{ form_start(form) }}

<div class="ui stackable equal width grid">
    <div class="field column">
        {{ form_row(form.username) }}
        {{ form_row(form.email) }}
        {{ form_row(form.application) }}
        {{ form_row(form.structure) }}
    </div>
    <div class="field column">
        {{ form_row(form.roles) }}
    </div>
</div>

<div class="ui stackable equal width grid">
    <div class="field column">
        {{ form_row(form.enabled) }}
        {{ form_row(form.locked) }}
    </div>
    <div class="field column">
        {{ form_row(form.expirationDate) }}
    </div>
</div>

<div class="ui stackable equal width grid">
    <div class="field column">
        {{ form_row(form.profile.lastName, {'attr': {'class': 'column'}}) }}
    </div>
    <div class="field column">
        {{ form_row(form.profile.firstName, {'attr': {'class': 'column'}}) }}
    </div>
</div>

{{ form_row(form.profile.user) }}

<div class="ui divider"></div>

{{ form_end(form) }}