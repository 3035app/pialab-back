{% trans_default_domain 'Pia' %}

{% set structure = form.vars.value %}

<div class="ui negative message">
    <div class="ui clearing basic segment">
        <div class="header">
            {{ 'pia.structures.modals.remove.title'|trans }}
        </div>
        <i style="float:right;">{{ 'pia.structures.modals.remove.sub_title'|trans }}</i>
    </div>
</div>

<table class="ui single line table">
    <thead>
        <tr>
            <th colspan="100%">
                {{ 'pia.structures.modals.remove.resume.structure'|trans }}
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td class="collapsing">
                <i class="building icon"></i>
                <b>{{ 'pia.structures.modals.remove.resume.name'|trans }}</b>
            </td>
            <td>{{ structure.name }}</td>
        </tr>
        <tr>
            <td class="collapsing">
                <i class="users icon"></i>
                <b>{{ 'pia.structures.modals.remove.resume.users_number'|trans }}</b>
            </td>
            <td>{{ structure.users|length }}</td>
        </tr>
        <tr>
            <td class="collapsing">
                <i class="folder open icon"></i>
                <b>{{ 'pia.structures.modals.remove.resume.pias_number'|trans }}</b>
            </td>
            <td>{{ structure.pias|length }}</td>
        </tr>
    </tbody>
</table>

{{ form_start(form) }}

{% do form.submit.setRendered() %}

<input type="submit" class="ui fluid red button" value="{{ 'pia.actions.remove'|trans }}"/>

{{ form_end(form) }}